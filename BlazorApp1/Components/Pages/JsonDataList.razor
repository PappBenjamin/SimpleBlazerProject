@page "/json-data"
@using BlazorApp1.Services
@using System.Text.Json
@inject FileReaderService FileReaderService
@inject DataManagementService DataManagementService
@inject ImageHandlingService ImageHandlingService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>JSON Data Manager</PageTitle>

<div class="container-fluid mt-4">
    <h1>JSON Data Manager</h1>

    <!-- File Upload Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Upload JSON File</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <InputFile OnChange="HandleFileSelected" accept=".json" class="form-control" />
            </div>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @successMessage
                    <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                </div>
            }
        </div>
    </div>

    <!-- Data Management Section -->
    @if (allData != null && allData.Count > 0)
    {
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Data Items (@DataManagementService.GetItemCount())</h5>
                    <div>
                        <button class="btn btn-success btn-sm" @onclick="ExportToJson">Export JSON</button>
                        <button class="btn btn-success btn-sm" @onclick="ExportToCsv">Export CSV</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Search Section -->
                <div class="mb-3">
                    <InputText @bind-Value="searchTerm" placeholder="Search in all fields..." class="form-control" />
                </div>

                <!-- Data Table -->
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>@(columnNames.FirstOrDefault() ?? "Name")</th>
                                @foreach (var col in columnNames.Skip(1).Take(2))
                                {
                                    <th>@col</th>
                                }
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var (item, index) in filteredData.Select((item, idx) => (item, idx)))
                            {
                                <tr>
                                    <td>@(index + 1)</td>
                                    <td>
                                        @if (columnNames.Any())
                                        {
                                            @if (item.ContainsKey(columnNames[0]))
                                            {
                                                <strong>@item[columnNames[0]]?.ToString()</strong>
                                            }
                                        }
                                    </td>
                                    @foreach (var col in columnNames.Skip(1).Take(2))
                                    {
                                        <td>
                                            @if (item.ContainsKey(col))
                                            {
                                                var value = item[col]?.ToString() ?? "";
                                                @if (ImageHandlingService.LooksLikeImageUrl(value))
                                                {
                                                    <a href="@value" target="_blank" class="btn btn-sm btn-outline-primary">View Image</a>
                                                }
                                                else
                                                {
                                                    <span>@(value.Length > 50 ? value.Substring(0, 50) + "..." : value)</span>
                                                }
                                            }
                                        </td>
                                    }
                                    <td>
                                        <button class="btn btn-info btn-sm" @onclick="() => ViewItem(index)">View</button>
                                        <button class="btn btn-warning btn-sm" @onclick="() => EditItem(index)">Edit</button>
                                        <button class="btn btn-danger btn-sm" @onclick="() => ConfirmDelete(index)">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!filteredData.Any())
                {
                    <div class="alert alert-info">No data matches your search.</div>
                }
            </div>
        </div>
    }
    else if (allData != null)
    {
        <div class="alert alert-warning">No data loaded. Please upload a JSON file.</div>
    }
    else
    {
        <div class="alert alert-info">Please upload a JSON file to get started.</div>
    }
</div>

<!-- View Details Modal -->
@if (selectedItem != null && showViewModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Item Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseViewModal"></button>
                </div>
                <div class="modal-body">
                    @foreach (var kvp in selectedItem)
                    {
                        <div class="mb-3">
                            <label class="form-label"><strong>@kvp.Key</strong></label>
                            @if (ImageHandlingService.LooksLikeImageUrl(kvp.Value?.ToString() ?? ""))
                            {
                                <div>
                                    <img src="@kvp.Value" alt="@kvp.Key" class="img-fluid" style="max-width: 100%; height: auto; border-radius: 5px;" />
                                </div>
                            }
                            else
                            {
                                <p class="form-control-plaintext">@kvp.Value</p>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseViewModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (showDeleteConfirm && deleteIndex >= 0)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this item?</p>
                    @if (selectedItem != null && columnNames.Any())
                    {
                        <p class="mb-0"><strong>@selectedItem[columnNames[0]]</strong></p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteAction">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Dictionary<string, object>> allData;
    private List<Dictionary<string, object>> filteredData;
    private List<string> columnNames = new();
    private Dictionary<string, object> selectedItem;
    private string searchTerm = string.Empty;
    private string errorMessage;
    private string successMessage;
    private bool showViewModal;
    private bool showDeleteConfirm;
    private int deleteIndex = -1;

    protected override void OnInitialized()
    {
        DataManagementService.ClearData();
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        try
        {
            errorMessage = null;
            successMessage = null;
            var file = e.File;

            if (file == null)
                return;

            using (var stream = file.OpenReadStream(maxAllowedSize: 1024 * 1024 * 10))
            {
                var fileContent = await FileReaderService.ReadFile(stream, file.Name);

                if (fileContent == null || fileContent.Count == 0)
                {
                    errorMessage = "File is empty or invalid.";
                    return;
                }

                // Convert to list of dictionaries
                var headers = fileContent[0];
                var dataList = new List<Dictionary<string, object>>();

                for (int i = 1; i < fileContent.Count; i++)
                {
                    var row = fileContent[i];
                    var dict = new Dictionary<string, object>();

                    for (int j = 0; j < headers.Length && j < row.Length; j++)
                    {
                        dict[headers[j]] = row[j];
                    }

                    dataList.Add(dict);
                }

                DataManagementService.InitializeData(dataList, file.Name);
                allData = DataManagementService.GetAllData();
                columnNames = DataManagementService.GetColumnNames();
                filteredData = allData;
                successMessage = $"Successfully loaded @allData.Count items from {file.Name}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading file: {ex.Message}";
            allData = null;
        }
    }

    private void ViewItem(int index)
    {
        try
        {
            selectedItem = DataManagementService.GetItemByIndex(index);
            showViewModal = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading item: {ex.Message}";
        }
    }

    private void EditItem(int index)
    {
        NavigationManager.NavigateTo($"/json-edit-item/{index}");
    }

    private void ConfirmDelete(int index)
    {
        deleteIndex = index;
        selectedItem = DataManagementService.GetItemByIndex(index);
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirm = false;
        deleteIndex = -1;
        selectedItem = null;
    }

    private void ConfirmDeleteAction()
    {
        try
        {
            DataManagementService.DeleteItem(deleteIndex);
            allData = DataManagementService.GetAllData();
            filteredData = FilterData();
            successMessage = "Item deleted successfully.";
            showDeleteConfirm = false;
            deleteIndex = -1;
            selectedItem = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting item: {ex.Message}";
        }
    }

    private void CloseViewModal()
    {
        showViewModal = false;
        selectedItem = null;
    }

    private void ExportToJson()
    {
        try
        {
            var json = DataManagementService.ExportToJson();
            // In a real app, you'd trigger a download here
            successMessage = "Export prepared (implement download in production)";
        }
        catch (Exception ex)
        {
            errorMessage = $"Export error: {ex.Message}";
        }
    }

    private void ExportToCsv()
    {
        try
        {
            var csv = DataManagementService.ExportToCsv();
            // In a real app, you'd trigger a download here
            successMessage = "Export prepared (implement download in production)";
        }
        catch (Exception ex)
        {
            errorMessage = $"Export error: {ex.Message}";
        }
    }

    private List<Dictionary<string, object>> FilterData()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
            return allData;

        return DataManagementService.SearchMultipleColumns(searchTerm);
    }

    protected override void OnParametersSet()
    {
        filteredData = FilterData();
    }
}
